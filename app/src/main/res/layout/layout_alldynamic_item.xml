<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <ImageView
        android:id="@+id/iv_photoImg1"
        android:src="@drawable/huangguan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动态标题"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/iv_photoImg1"
        android:layout_alignTop="@id/iv_photoImg1"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/tv_title1"
        android:layout_alignTop="@+id/tv_title1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="求合租："
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_booleandemand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="有"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你好"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/iv_photoImg1"
         />

    <ImageView
        android:id="@+id/iv_dynamicImg1"
        android:src="@drawable/amc"
        android:layout_alignLeft="@+id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/iv_photoImg1"
        android:layout_below="@+id/tv_content1" />
    <ImageView
        android:id="@+id/iv_dianzan"
        android:src="@drawable/arl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_dynamicImg1"
        android:layout_below="@+id/iv_dynamicImg1"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="50dp"/>
    <TextView
        android:id="@+id/tv_dianzancount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_toRightOf="@+id/iv_dianzan"
        android:layout_alignTop="@+id/iv_dianzan"
        android:layout_marginLeft="-50dp"/>


</RelativeLayout>
