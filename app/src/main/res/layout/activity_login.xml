<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:background="#aba6a6"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapp.LoginActivity">
      <LinearLayout
          android:id="@+id/ll_aa"
          android:layout_marginTop="80dp"
          android:layout_marginLeft="30dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:text="账号："
              android:textSize="24sp"
              android:id="@+id/tv_zhanghao"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <EditText
              android:id="@+id/et_zhanghao"

              android:layout_width="240dp"
              android:layout_height="wrap_content" />
      </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bb"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/ll_aa"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_mima"
            android:text="密码："
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_mima"
            android:layout_width="240dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
<LinearLayout
    android:layout_marginTop="40dp"
    android:layout_below="@+id/ll_bb"
    android:orientation="horizontal"
    android:layout_marginLeft="120dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/bt_zhuce"
        android:text="注册"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_login"
        android:text="登录"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

</RelativeLayout>
