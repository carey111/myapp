<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_photo"
        android:src="@drawable/bb"
        android:layout_width="match_parent"
        android:layout_height="240dp"/>
    <TextView
        android:id="@+id/tv_type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="房间类型"
        android:textSize="20sp"
        android:textColor="#aa000000"
        android:layout_below="@+id/iv_photo"/>
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="房间类型"
        android:textSize="20sp"
        android:textColor="#aa000000"
        android:layout_below="@+id/iv_photo"
        android:layout_toRightOf="@+id/tv_type1"/>
    <TextView
        android:id="@+id/tv_area1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="面积"
        android:textSize="20sp"
        android:layout_below="@+id/tv_type"/>

    <TextView
        android:id="@+id/tv_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="面积"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/tv_area1"
        android:layout_below="@+id/tv_type"/>
    <TextView
        android:id="@+id/tv_zujin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="租金"
        android:textSize="20sp"
        android:layout_below="@+id/tv_area"/>
    <TextView
        android:id="@+id/tv_zujin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="租金"
        android:textSize="20sp"
        android:layout_below="@+id/tv_area"
        android:layout_toRightOf="@+id/tv_zujin1"/>/>

</RelativeLayout>
